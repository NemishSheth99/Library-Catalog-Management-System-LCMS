<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>login</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />

    <!-- Fontawesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Toastr -->
    <link href="~/Assets/vendors/toastr/dist/css/toastr.css" rel="stylesheet" />
    <link href="~/Assets/vendors/toastr/dist/css/toastr.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: "Open Sans";
            padding: 0;
            margin: 0;
            /*background: url("../image/login/banner-with-overlay.jpg") no-repeat fixed;*/
            background: url('../../Image/Login/banner-with-overlay.jpg');
            background-size: cover;
        }

        .center {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

            .center #logo {
                margin-bottom: 25px;
                text-align: center;
            }

            .center #login {
                background: #ffffff;
                border: 1px;
                border-radius: 3px;
            }

        #margin {
            margin: 30px;
            width: 400px;
        }

        #login h3 {
            font-size: 34px;
            font-weight: 600;
            line-height: 38px;
            color: #6255a5;
            margin: 0px 0px 10px 0px;
            text-align: center;
        }

        #login p {
            font-size: 15px;
            font-weight: 400;
            line-height: 19px;
            color: #333333;
            margin: 0 0px 20px 0px;
            text-align: center;
        }

        input[type="password"],
        input[type="email"],
        input[type="text"] {
            border: none;
            outline: none;
            padding-top: 3px;
            padding-left: 3px;
            width: 100%;
        }

        .input-box {
            width: 100%;
            height: 30px;
            border-radius: 3px;
            border: 1px solid #6255a5;
            display: inline-block;
            box-sizing: border-box;
        }

        button {
            color: #ffffff;
            width: 100%;
            height: 35px;
            align-content: center;
            cursor: pointer;
            border-radius: 3px;
            background: #6255a5;
            font-family: "Open Sans";
            font-size: 18px;
            line-height: 22px;
            margin-top: 20px;
            margin-bottom: 10px;
        }

        #forget-password {
            float: right;
            font-size: 16px;
            font-weight: 400;
            line-height: 20px;
            color: #6255a5;
            margin-top: 15px;
        }

        label {
            padding-top: 15px;
            font-size: 16px;
            font-weight: 400;
            line-height: 20px;
            color: #333333;
        }

        input[type="checkbox"] {
            float: left;
            border: 2px solid red;
        }

        #eye-password {
            position: absolute;
            left: 400px;
            top: 235px;
            color: grey;
        }

        /* media query */
        @@media (max-width: 480px) {
            #margin {
                margin: 30px;
                width: 250px;
            }

            #eye-password {
                position: absolute;
                left: 250px;
                top: 230px;
            }

            #login h3 {
                font-size: 30px;
            }

            #login p {
                font-size: 11px;
                line-height: 15px;
            }
        }

        @@media (max-width: 380px) {
            #margin {
                margin: 30px;
                width: 200px;
            }

            #eye-password {
                position: absolute;
                left: 210px;
                top: 247px;
            }

            #forget-password {
                font-size: 12px;
            }

            label {
                font-size: 14px;
            }

            button {
                width: 100%;
                height: 30px;
            }

            .center #logo img {
                width: 220px;
            }

            #login p {
                font-size: 10px;
                line-height: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="center">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
    <!-- jquery  -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Toastr -->
    <script src="~/Assets/vendors/toastr/dist/js/toastr.min.js"></script>
    <script>

        // Password Eye
        $(".toggle-password").click(function () {

            $(this).toggleClass("fa-eye fa-eye-slash");
            var input = $($(this).attr("toggle"));
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });
    </script>
</body>

</html>
