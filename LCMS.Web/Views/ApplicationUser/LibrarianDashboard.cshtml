
@{
    ViewBag.Title = "LibrarianDashboard";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

@*<h2>Librarian Dashboard</h2>*@
<div class="row">
    <div class="col-md-12">
        <div class="">
            <div class="x_content">
                <div class="row">
                    <div class="animated flipInY col-lg-4 col-md-4 col-sm-6  ">
                        <a href="/ApplicationUser/UserIndex">
                            <div class="tile-stats" style="padding-top:30px;padding-bottom:30px">
                                <div class="icon" style="padding-top:30px">
                                    <i class="fa fa-group"></i>
                                </div>
                                <div class="count" style="color:#34495E">@ViewBag.UserCount</div>
                                <h3 style="color:#73879C">Total Active Users</h3>
                            </div>
                        </a>
                    </div>
                    <div class="animated flipInY col-lg-4 col-md-4 col-sm-6  ">
                        <a href="/BookCatalog/BookCatalogIndex">
                            <div class="tile-stats" style="padding-top:30px;padding-bottom:30px">
                                <div class="icon" style="padding-top:30px">
                                    <i class="fa fa-book"></i>
                                </div>
                                <div class="count" style="color:#34495E ">@ViewBag.CatalogCount</div>
                                <h3 style="color:#73879C">Total Book Catalogs</h3>
                            </div>
                        </a>
                    </div>
                    <div class="animated flipInY col-lg-4 col-md-4 col-sm-6  ">
                        <div class="tile-stats" style="padding-top:30px;padding-bottom:30px">
                            <div class="icon" style="padding-top:30px">
                                <i class="fa fa-share-square-o"></i>
                            </div>
                            <div class="count" style="color:#34495E ">@ViewBag.CheckoutCount</div>
                            <h3 style="color:#73879C">Total Checked Out Books</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
