@model IEnumerable<LCMS.Models.BookCatalog.BookCatalogDetail>

@{
    ViewBag.Title = "ShowCatalog";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

<h2>ShowCatalog</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Summary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublicationYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoverImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Authors)
        </th>
        <th>Details</th>
        <th>Show Books</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Summary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublicationYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoverImage)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Authors)
        </td>
        <td>
            <a href="/BookCatalog/ShowCatalogDetail/@Html.DisplayFor(modelItem => item.Id)" class="btn-sm btn-default"><i class="fa fa-info"></i></a>
        </td>        
        <td>
            <a href="/BookPlace/ShowBookPlace/@Html.DisplayFor(modelItem => item.Id)" class="btn-sm btn-primary">Show Books</a>
        </td>
        
    </tr>
}

</table>
