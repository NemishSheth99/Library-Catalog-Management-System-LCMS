@model LCMS.Models.BookCatalog.BookCatalogDetail
@{
    ViewBag.Title = "BookCatalogDetails";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

<h2>Book Catalog Detail</h2>

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <h2>@Html.DisplayFor(model => model.Name)</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Settings 1</a>
                            <a class="dropdown-item" href="#">Settings 2</a>
                        </div>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-md-7 col-sm-7 ">
                    <div class="product-image">
                        <img src="/BookCoverImages/@Html.DisplayFor(model => model.CoverImage)" alt="..." height="700" />
                    </div>
                </div>
                <div class="col-md-5 col-sm-5 " style="border:0px solid #e5e5e5;">
                    <h3 class="prod_title">Summary</h3>
                    <p>@Html.Raw(Model.Summary)</p>
                    <br />
                    <div class="">
                        <h2>ISBN</h2>
                        <h4>@Html.DisplayFor(model => model.ISBN)</h4>
                    </div>
                    <br />
                    <div class="">
                        <h2>Author</h2>
                        <h4>@Html.DisplayFor(model => model.Authors)</h4>
                    </div>
                    <br />
                    <div class="">
                        <h2>Publication year</h2>
                        <h4>@Html.DisplayFor(model => model.PublicationYear)</h4>
                    </div>
                    <br />
                    <div class="">
                        <h2>Edition</h2>
                        <h4>@Html.DisplayFor(model => model.Edition)</h4>
                    </div>
                    <br />
                    <div class="">
                        <a href="/BookPlace/BookPlaceIndex/@Html.DisplayFor(model => model.Id)" class="btn btn-info">Show Books</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




